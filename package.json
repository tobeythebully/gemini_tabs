{
    "name": "gemini-tabs",
    "version": "1.2.2",
    "description": "Gemini with tab functionality",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder --mac",
        "build:dir": "electron-builder --mac --dir",
        "build:win": "electron-builder --win",
        "build:all": "electron-builder --mac --win"
    },
    "build": {
        "appId": "com.gemini.tabs",
        "productName": "Gemini Tabs",
        "mac": {
            "category": "public.app-category.productivity",
            "target": [
                "dmg",
                "zip"
            ],
            "icon": "assets/icon.icns"
        },
        "win": {
            "target": [
                "nsis",
                "portable"
            ],
            "icon": "assets/icon.png"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true
        },
        "files": [
            "main.js",
            "preload.js",
            "index.html",
            "styles.css",
            "renderer.js"
        ]
    },
    "devDependencies": {
        "electron": "^28.0.0",
        "electron-builder": "^24.0.0"
    }
}