{
    "name": "gemini-tabs",
    "version": "1.0.0",
    "description": "Gemini with tab functionality",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder --mac",
        "build:dir": "electron-builder --mac --dir"
    },
    "build": {
        "appId": "com.gemini.tabs",
        "productName": "Gemini Tabs",
        "mac": {
            "category": "public.app-category.productivity",
            "target": [
                "dmg",
                "zip"
            ],
            "icon": "icon.icns"
        },
        "files": [
            "main.js",
            "preload.js",
            "index.html",
            "styles.css",
            "renderer.js"
        ]
    },
    "devDependencies": {
        "electron": "^28.0.0",
        "electron-builder": "^24.0.0"
    }
}